!!! 5
%html{:data => {:controller => controller_name,
                :action => action_name,
                :'is-dev' => @is_dev,
                :'fb-app-id' => ENV['FACEBOOK_APP_ID'],
                :'fb-cb-frame' => ENV['FACEBOOK_CB_FRAME'],
                :'fb-cb-default' => root_url}}
  %head
    %meta{:charset => 'utf-8'}
    =yield(:custom_metadata)
    %title= @page_title ? "#{@page_title} - #{t :app}" : "#{t :app} - Make your photos hilarious"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-28614179-1']);
      _gaq.push(['_setDomainName', '#{root_url.starts_with?('https') ? root_url[8..-2] : root_url[7..-2]}']);
      _gaq.push(['_setAllowLinker', true]);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    .container
      .row
        #landing-header.span12
          #landing-header-inner.row
            #logo-wrap.span3
              %a{:href=> "/"}
                %img#logo{:src => "/assets/logo-small.png", :alt => "#{t(:app).downcase}"}
            #cta.span9
              #cta-row.row
      =yield
    %footer#default-footer
      %span= "&copy; 2012 #{t :app}.".html_safe
      %a{:href => "/about"} About
      &middot;
      %a{:href => "/contact"} Contact
      &middot;
      %a{:href => "https://www.facebook.com/picmixr"} Facebook
      &middot;
      %a{:href => "https://twitter.com/picmixr"} Twitter
      &middot;
      %a{:href => "/terms"} Terms
    #fb-root.hide
    :javascript
      // Load Facebook JS SDK asynchronously
      (function(d){
        var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
        js = d.createElement('script'); js.id = id; js.async = true;
        js.src = "//connect.facebook.net/en_US/all.js";
        d.getElementsByTagName('head')[0].appendChild(js);
      }(document));
